@using static NS.OCS.Model.ProductModel
@model NS.OCS.Model.ProductModel
@{
    ViewData["Title"] = "Index";
}

<h1>Add Product</h1>

<hr />

@if (ViewBag.IsSuccess == true)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Congratulations !</strong> You Succesfully added New Product.<br />
        </div>
}
<form class="Form" method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Product" id="formCreate">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Image)
        <div class="custom-file">
            <input type="file" name="ImageFile" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ProductType"></label>
        <input asp-for="ProductType" class="form-control" />
        <span asp-validation-for="ProductType" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label asp-for="Os">Operating System</label>
        <br />
        <span>WINDOWS: </span> @Html.RadioButton("Os", "WINDOWS", true)
        <span> | MAC OS: </span> @Html.RadioButton("Os", "MAC-OS", false)
        <span> | Linux: </span> @Html.RadioButton("Os", "Linux", false)
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.ProductMake,
        new SelectList(Enum.GetValues(typeof(Company))), "Company")
    </div>
    <div class="form-group">
        <label asp-for="Ram"></label>
        <input asp-for="Ram" class="form-control" />
        <span asp-validation-for="Ram" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hdd"></label>
        @Html.TextBoxFor(x => x.Hdd, new { @class = "form-control", placeholder = "Enter hARD dISK Size", onblur = "RamStrengthCheck();" })
        @Html.ValidationMessageFor(x => x.Hdd, "", new { @class = "text-danger", style = "display:none" })
        @Html.ValidationMessage("Hdd")
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Product" class="btn btn-primary" id="btn-Add" />
    </div>

</form>


