@{
    ViewData["Title"] = "GetProductById";
}

@model IEnumerable<NS.OCS.Data.Entities.ProductDetails>

<h1 style="color:orangered">Product Details</h1>
<hr style="border-bottom-color:bisque">

@foreach (var item in Model)
{
    <div class="container col-xl-2">
    </div>
    <div class="container col-xl-10">
        <div class="card mb-12" style="max-width: 540px; box-shadow:indianred">
            <div class="row no-gutters">

                <div class="col-md-7">

                    <img src="@item.Image" class="card-img" alt="@item.ProductMake" style="max-width: 380px">
                </div>
                <div class="col-md-5" style="text-align:right">
                    <div class="card-body">
                        <h3 class="card-title" style="color:indianred; text-shadow:inherit">@item.ProductName</h3>
                        <h4>Company:-@item.ProductMake</h4>
                        <h4>RAM:- @item.Ram</h4>
                        <h4>HDD:- @item.Hdd</h4>
                        <h5>OS:-@item.Os</h5>


                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    </div>

                </div>
            </div>
            <div class="flex-column col-md-12" style="text-align:end">
                <h2 style="color:royalblue">₹ @item.Price</h2>
            </div>
            <div class="flex-xl-row-reverse" style="text-align:justify">
                <p class="card-text" style="color:darkcyan">@item.Description</p>
            </div>
        </div>
    </div>
    <div class="container col-xl-2">
    </div>
    <div>
        <a asp-action="ShowAllProducts">Back to List</a>
    </div>
}

