@model NS.EMS.Model.EmployeeModel
@{
    ViewData["Title"] = "Index";
}

<section>
    <form asp-controller="Employee" asp-action="Create" method="post">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-8 col-xl-6">
                    <div class="row">
                        <div class="col text-center">
                            <h2>Add Employee</h2>
                            <hr />
                        </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="col mt-4">
                            <input asp-for="EmployeeName"  type="text" class="form-control" placeholder="Employee Name">
                            <span asp-validation-for="EmployeeName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row align-items-center mt-4">
                        <div class="col">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                        </div>
                    </div>
                    <div class="row align-items-center mt-4">
                        <div class="col">
                            <input asp-for="Department" type="text" class="form-control" placeholder="Department">
                        </div>

                    </div>
                    <div class="row align-items-center mt-4">
                        <div class="col">
                            <input asp-for="Mobile" type="text" class="form-control" placeholder="Contact No.">
                        </div>

                    </div>
                    <div class="row justify-content-start mt-4">
                        <div class="col">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input">
                                    I Read and Accept
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary mt-4">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>


