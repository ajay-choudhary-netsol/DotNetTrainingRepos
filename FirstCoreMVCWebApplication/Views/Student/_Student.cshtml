
@model List<Student>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">DOB</th>
            <th scope="col">Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@Html.ActionLink(item.StudentId.ToString(), "Index", "Student", new { id = item.StudentId })</th>
                <td>@item.StudentName</td>
                <td>@item.Branch</td>
                <td>@item.Gender</td>
            </tr>

        }
    </tbody>
</table>
