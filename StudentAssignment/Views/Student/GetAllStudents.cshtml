@{
    ViewData["Title"] = "Students";
}
@using StudentAssignment.Models;
@model IEnumerable<StudentModel>
<h2>Student Details</h2>
<hr />
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Branch</th>
            <th scope="col">Address</th>
            <
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            @*<th scope="row"></th>*@
            <td>@item.StudentId</td>
            <td>@item.StudentName</td>
            <td>@item.Email</td>
            <td>@item.Branch</td>
            <td>@item.Address</td>
            <td>@Html.ActionLink("EditStudent", "EditStudent", new { id = item.StudentId })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = @item.StudentId })</td>
        </tr>

        }
    </tbody>
</table>

<a asp-controller="Student" asp-action="AddStudent" class="btn btn-primary">Add Student</a>


